generator client {
  provider = "prisma-client"
  output   = "../src/generated/prisma"
}

datasource db {
  provider = "mongodb"
  url      = env("DATABASE_URL")
}

model HeartRateCurrent {
  id              String   @id @default(auto()) @map("_id") @db.ObjectId
  deviceId        Int      @unique
  heartRate       Int
  beatTime        Int?
  beatCount       Int?
  manufacturerId Int?
  serialNumber    Int?
  stickId         Int
  receivedAt      DateTime @updatedAt
}

model HeartRateRecord {
  id              String   @id @default(auto()) @map("_id") @db.ObjectId
  deviceId        Int
  heartRate       Int
  beatTime        Int?
  beatCount       Int?
  manufacturerId Int?
  serialNumber    Int?
  stickId         Int
  receivedAt      DateTime @default(now())
}

model User {
  id              String   @id @default(auto()) @map("_id") @db.ObjectId
  name            String
  gender          Gender
  weight          Float
  height          Int
  birthDate       DateTime
  createdAt       DateTime @default(now())
  updatedAt       DateTime @updatedAt
  userDevice      UserDevice?
}

model UserDevice {
  id              String   @id @default(auto()) @map("_id") @db.ObjectId
  userId          String   @unique @db.ObjectId
  deviceId        Int      @unique
  linkedAt        DateTime @default(now())
  updatedAt       DateTime @updatedAt
  user            User     @relation(fields: [userId], references: [id], onDelete: Cascade)
}

model Lesson {
  id              String   @id @default(auto()) @map("_id") @db.ObjectId
  status          LessonStatus @default(ACTIVE)
  startedAt       DateTime @default(now())
  endedAt         DateTime?
  createdAt       DateTime @default(now())
  updatedAt       DateTime @updatedAt
}

model LessonResult {
  id              String   @id @default(auto()) @map("_id") @db.ObjectId
  lessonId        String   @db.ObjectId
  totalDevices    Int
  deviceResults   DeviceResult[]
  totalPoints     Int
  duration        Int
  createdAt       DateTime @default(now())
  updatedAt       DateTime @updatedAt
}

type DeviceResult {
  deviceId        Int
  user            UserData?
  totalHeartRateRecords Int
  zones           ZoneStats
  points          Int
  avgHeartRate    Int
}

type UserData {
  id              String
  name            String
  gender          String
  weight          Float
  height          Int
  birthDate       String
  createdAt       String
  updatedAt       String
}

type ZoneStats {
  zone1           Int
  zone2           Int
  zone3           Int
  zone4           Int
  zone5           Int
}

enum LessonStatus {
  ACTIVE
  ENDED
}

enum Gender {
  M
  F
}